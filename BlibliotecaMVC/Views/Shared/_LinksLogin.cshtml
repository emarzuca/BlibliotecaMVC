@* inyectamos los using *@

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav">


    @* Preguntamos si el usuario está logueado y le pasamos el usuario*@
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola @User.Identity.Name</span>
        </li>

    @* Generamos un formulario que apunte al método del controlador Logout *@

    <li class="nav-item">
        <form class="form-inline" asp-action="logout" asp-controller="usuarios">
            <button type="submit" class="nav-link btn btn-link text-dark">
                Logout
            </button>
        </form>

        </li>
    } else

    {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="usuarios" asp-action="Registro">
            Registro
        </a>
    </li>    

    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="usuarios" asp-action="Login">Login</a>
    </li>

    }

</ul>